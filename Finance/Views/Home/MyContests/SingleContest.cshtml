@using Services
@model Services.ViewModels.BasicContestViewModel

@if (Model != null)
{
    <div class="competition">
        <div class="competition-ghost"></div>

        <div class="image-wrap">
            @if (Model.Image != null)
            {
                <img src="@GfxHelper.Contest/@Model.Image.Url" />
            }
            
        </div>

        <div class="content">

            <h3>@Model.Name</h3>
            @if (Model.EndTime != null)
            {
                <p class="-capitalize"> Slutar <span data-livestamp="@Model.EndTime"></span></p>
            }
            else
            {
                <p class="-capitalize color-red"> Inte påbörjad </p>
            }
            
        </div>

    </div>
}


