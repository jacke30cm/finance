@{
    ViewBag.Title = "Start"; 
    @Styles.Render("~/CssBundle/home")
}

<div id="home" class="row horizontal-scroll">
    

    <div class="col-lg">

        <h1>Mina tävlingar</h1>
        <br />

        <div class="block-m">

            <div class="competition">
                <div class="competition-ghost"></div>

                <div class="image-wrap">
                    <img src="~/Content/Images/Competitions/wstreet.jpg" />
                </div>

                <div class="content">

                    <h2>Sesams aktietävling</h2>
                    <p class="-capitalize "> Pågår en vecka till</p>
                </div>

            </div>

        </div>

        <div class="block-m">

            <div class="competition">
                <div class="competition-ghost"></div>

                <div class="image-wrap">
                    <img src="~/Content/Images/Competitions/oldfashioned.jpg" />
                </div>

                <div class="content">

                    <h2>Bästa investeraren</h2>
                    <p class="-capitalize "> Pågår en vecka till</p>
                </div>

            </div>

        </div>



    </div>

    <div class="col-lg">

        <h1>Populära tävlingar</h1>
        <br />

        @for (var c = 0; c < 4; c++)
        {

            <div class="block-m">

                @for (var x = 0; x < 4; x++)
                {


                    <div class="block-s">
                        <div class="competition">
                            <div class="competition-ghost"></div>
                        </div>
                    </div>

                }
            </div>
        }


    </div>

    <div class="col-lg vertical-scroll">

        <h1>Feed</h1>
        <br />

        @for (var x = 0; x < 8; x++)
        {


            <div class="event-block">

                <div class="block-s">
                    <div class="image-wrap">
                        <img src="~/Content/Images/Users/sherlock.jpg" />
                    </div>
                </div>

                <div class="block-s">
                    <p>Here follows text</p>
                </div>

            </div>
        }

    </div>

    <div class="col-lg">

        <h1>Other</h1>
        <br />

        <div class="event-block">




        </div>

        <div class="event-block">




        </div>

    </div>

</div>

@Html.Action("ControlPanel", "Master", new { name = "CreateCompetition" })